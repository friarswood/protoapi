{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "Prototype API BETA",
    "description": "Demonstration of how to create a simple API and automate the deployment process",
    "termsOfService": "",
    "contact": {
      "name": "",
